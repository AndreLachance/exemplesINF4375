doctype html
html
  head
    link(rel="stylesheet", href="/stylesheets/style.css")
    meta(charset="utf-8")
    title Signer la pétition
  body
    h1 Signer la pétition
    form(action="/signature", method="POST")
      table
        tbody
          tr
            td Nom :
            td
              input(type="text", name="nom")
          tr
            td Prénom :
            td
              input(type="text", name="prenom")
          tr
            td Municipalité :
            td
              input(type="text", name="municipalite")
          tr
            td Courriel :
            td
              input(type="text", name="courriel")
      input(type="submit", value="Signer la pétition")
